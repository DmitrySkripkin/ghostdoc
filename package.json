{
  "name": "ghostdoc",
  "private": true,
  "description": "my ace project",
  "version": "1.0.0",
  "author": "DmitrySkripkin <sepia13@yandex.ru> ()",
  "bugs": {
    "url": "https://github.com/DmitrySkripkin/ghostdoc/issues",
    "email": "sepia13@yandex.ru"
  },
  "contributors": [
    "DmitrySkripkin <sepia13@yandex.ru> ()"
  ],
  "dependencies": {
    "reol": "^0.2.2"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "auto-bind": "^1.1.0",
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-standard": "latest",
    "eslint-plugin-standard": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.6",
    "standard": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/DmitrySkripkin/ghostdoc",
  "keywords": [
    "ghostdoc",
    "lass"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 90,
    "branches": 90,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DmitrySkripkin/ghostdoc"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "standard && remark . -qfo",
    "precommit": "npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  }
}
